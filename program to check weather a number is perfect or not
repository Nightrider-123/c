#include <stdio.h>
void main()
{
  int n,i,s;
  printf("enter the number");
  scanf("%d", &n);
  if(n%2 != 0)
   printf("\n %d is not a perfect number",n);
  else
    {
      for(i=1,s=0;i<n && n%i==0;i++)
      {
          s=s+i;
       }
       if(s==n)
        printf("\n %d is a perfect number",n);
       else
         print("\n %d is not a perfect number",n);
      }
    }
